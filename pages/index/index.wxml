<view>
  <p class="head">企业包打听</p>
  <p class="summary">为企业提供全方位的风险预警服务，以可视可互动的形式交互</p>
</view>

<van-card class="card" wx:for="{{ comps }}" wx:for-item="comp" wx:key="id" data-recordNo="{{comp.recordNo}}" data-id="{{comp.id}}" bindtap="bindViewTap"
  desc="描述信息"
  title="{{comp.short_name}}"
  desc="{{comp.desc}}"
  thumb="{{comp.img}}">
  <view  class="price" slot="price">
    <p>{{comp.risk!=""?'综合风险指数':''}}</p>
  </view>
  <view class="num" style="{{comp.risk>60?'color:red':'color:green'}}" slot="num">
    <p>{{comp.risk!=null?comp.risk:'暂无'}}</p>
  </view>
</van-card>
